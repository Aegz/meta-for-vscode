{
	"name": "meta-for-vscode",
	"displayName": "Meta for VSCode",
	"description": "A tool to allow and facilitate the documentation of files and folders within a project",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:meta-for-vscode.viewDocumentation"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "meta-for-vscode.viewDocumentation",
				"title": "Meta:View Documentation"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "meta-for-vscode.viewDocumentation",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.43.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
